<div class="container">
  <div class="row mt-5">
      <h4>Employees information</h4>
      <table class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th> First Name </th>
                <th> Last Name </th>
                <th> Role </th>
                <th> Salary </th>
                <th> Address </th>
            </tr>
        </thead>
        <tbody>
            <% @employees['_embedded']['employeeList'].each do |employee| %>
                <tr>
                    <td><%= employee['firstName'] %></td>
                    <td><%= employee['lastName'] %></td>
                    <td><%= employee['role'] %></td>
                    <td><%= employee['salary'] %></td>
                    <td><%= employee['address'] %></td>
                </tr>
            <% end %>
        </tbody>
      </table>
  </div>
</div>
